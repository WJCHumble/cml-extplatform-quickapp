<include src="chameleon-api/src/interfaces/px2cpx/getWidth.interface"></include>

<script cml-type="quickapp">
class Method implements getWidthInterface {
  getWidth() {
    return new Promise((resolve, reject) => {
      quickapp.device.getInfo({
        success: res => resolve(res.screenWidth),
        fail: err => reject(err)
      })
    })
  }
}

export default new Method();
</script>
